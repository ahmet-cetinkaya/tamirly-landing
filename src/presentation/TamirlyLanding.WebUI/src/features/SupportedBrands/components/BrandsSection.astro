---
import AnimatedSection from "@packages/acore-astro/src/components/AnimatedSection.astro";
import daikinLogo from "@tamirly-landing-webui/shared/assets/icons/brand-daikin.svg?raw";
import mitsubishiLogo from "@tamirly-landing-webui/shared/assets/icons/brand-mitsubishi.svg?raw";
import samsungLogo from "@tamirly-landing-webui/shared/assets/icons/brand-samsung.svg?raw";
import lgLogo from "@tamirly-landing-webui/shared/assets/icons/brand-lg.svg?raw";
import hitachiLogo from "@tamirly-landing-webui/shared/assets/icons/brand-hitachi.svg?raw";
import carrierLogo from "@tamirly-landing-webui/shared/assets/icons/brand-carrier.svg?raw";
import airfelLogo from "@tamirly-landing-webui/shared/assets/icons/brand-airfel.svg?raw";
import arcelikLogo from "@tamirly-landing-webui/shared/assets/icons/brand-arcelik.svg?raw";
import baymakLogo from "@tamirly-landing-webui/shared/assets/icons/brand-baymak.svg?raw";
import bekoLogo from "@tamirly-landing-webui/shared/assets/icons/brand-beko.svg?raw";
import boschLogo from "@tamirly-landing-webui/shared/assets/icons/brand-bosch.svg?raw";
import fluoLogo from "@tamirly-landing-webui/shared/assets/icons/brand-fluo.svg?raw";
import fujiplusLogo from "@tamirly-landing-webui/shared/assets/icons/brand-fujiplus.svg?raw";
import fujitsuLogo from "@tamirly-landing-webui/shared/assets/icons/brand-fujitsu.svg?raw";
import greeLogo from "@tamirly-landing-webui/shared/assets/icons/brand-gree.svg?raw";
import haierLogo from "@tamirly-landing-webui/shared/assets/icons/brand-haier.svg?raw";
import hantechLogo from "@tamirly-landing-webui/shared/assets/icons/brand-hantech.svg?raw";
import mideaLogo from "@tamirly-landing-webui/shared/assets/icons/brand-midea.svg?raw";
import panasonicLogo from "@tamirly-landing-webui/shared/assets/icons/brand-panasonic.svg?raw";
import rotaClimateLogo from "@tamirly-landing-webui/shared/assets/icons/brand-rota-climate.svg?raw";
import siemensLogo from "@tamirly-landing-webui/shared/assets/icons/brand-siemens.svg?raw";
import sigmaLogo from "@tamirly-landing-webui/shared/assets/icons/brand-sigma.svg?raw";
import toshibaLogo from "@tamirly-landing-webui/shared/assets/icons/brand-toshiba.svg?raw";
import vestelLogo from "@tamirly-landing-webui/shared/assets/icons/brand-vestel.svg?raw";
import yorkLogo from "@tamirly-landing-webui/shared/assets/icons/brand-york.svg?raw";

import BrandLogo from "./BrandLogo.astro";
import { i18nInstance } from "@tamirly-landing-webui/shared/i18n/instance";
import { TranslationKeys } from "@tamirly-landing-webui/shared/i18n/enums/TranslationKeys";
import type { Locales } from "@tamirly-landing-webui/shared/i18n/enums/Locales";

interface Props {
  locale: Locales;
}

const { locale } = Astro.props;
const t = (key: TranslationKeys) => i18nInstance.translate(locale, key);

const brands = [
  { svg: daikinLogo, alt: "Daikin" },
  { svg: mitsubishiLogo, alt: "Mitsubishi" },
  { svg: samsungLogo, alt: "Samsung" },
  { svg: lgLogo, alt: "LG" },
  { svg: hitachiLogo, alt: "Hitachi" },
  { svg: carrierLogo, alt: "Carrier" },
  { svg: airfelLogo, alt: "Airfel" },
  { svg: arcelikLogo, alt: "Arcelik" },
  { svg: baymakLogo, alt: "Baymak" },
  { svg: bekoLogo, alt: "Beko" },
  { svg: boschLogo, alt: "Bosch" },
  { svg: fluoLogo, alt: "Fluo" },
  { svg: fujiplusLogo, alt: "Fujiplus" },
  { svg: fujitsuLogo, alt: "Fujitsu" },
  { svg: greeLogo, alt: "Gree" },
  { svg: haierLogo, alt: "Haier" },
  { svg: hantechLogo, alt: "Hantech" },
  { svg: mideaLogo, alt: "Midea" },
  { svg: panasonicLogo, alt: "Panasonic" },
  { svg: rotaClimateLogo, alt: "Rota Climate" },
  { svg: siemensLogo, alt: "Siemens" },
  { svg: sigmaLogo, alt: "Sigma" },
  { svg: toshibaLogo, alt: "Toshiba" },
  { svg: vestelLogo, alt: "Vestel" },
  { svg: yorkLogo, alt: "York" },
];
---

<section
  class="py-16 bg-background border-t border-border-color overflow-hidden"
  id="brands"
  style="content-visibility: auto"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-10">
    <AnimatedSection animation="fade-up">
      <p class="text-center text-sm font-semibold text-text-muted uppercase tracking-widest">
        {t(TranslationKeys.BRANDS_TITLE)}
      </p>
    </AnimatedSection>
  </div>

  <div class="relative w-full overflow-hidden">
    <!-- Gradient Masks -->
    <div
      class="absolute top-0 bottom-0 left-0 w-24 md:w-48 bg-gradient-to-r from-background to-transparent z-10 pointer-events-none"
    >
    </div>
    <div
      class="absolute top-0 bottom-0 right-0 w-24 md:w-48 bg-gradient-to-l from-background to-transparent z-10 pointer-events-none"
    >
    </div>

    <div class="flex whitespace-nowrap logo-slider opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
      <!-- Render brands twice for seamless loop -->
      <div class="flex gap-16 md:gap-24 items-center pr-16 md:pr-24 animate-scroll">
        {
          brands.map((brand) => (
            <BrandLogo svg={brand.svg} alt={brand.alt} class="flex-shrink-0 w-auto object-contain h-8 md:h-10" />
          ))
        }
      </div>
      <div class="flex gap-16 md:gap-24 items-center pr-16 md:pr-24 animate-scroll" aria-hidden="true">
        {
          brands.map((brand) => (
            <BrandLogo svg={brand.svg} alt={brand.alt} class="flex-shrink-0 w-auto object-contain h-8 md:h-10" />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }
  .logo-slider:hover .animate-scroll {
    animation-play-state: paused;
  }
</style>
